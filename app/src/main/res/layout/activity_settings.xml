<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B300 Print Service Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- === PRINTER === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ–¨  Printer"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Spinner
                android:id="@+id/spinner_bt_devices"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp" />

            <Button
                android:id="@+id/btn_open_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pair" />
        </LinearLayout>

        <!-- === PAPER === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“„  Paper"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_paper_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Width (mm)"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/et_paper_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="78" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height (mm)"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/et_paper_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="32" />
            </LinearLayout>
        </LinearLayout>

        <!-- === PRINT QUALITY === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¨  Print Quality"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Darkness (BaskÄ± YoÄŸunluÄŸu)"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_darkness"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Speed (BaskÄ± HÄ±zÄ±)"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_speed"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dithering Mode (Renk DÃ¶nÃ¼ÅŸÃ¼mÃ¼)"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_dithering"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_threshold_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threshold (EÅŸik): 128"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekbar_threshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="128"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_contrast_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrast (Kontrast): 100%"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekbar_contrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_brightness_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness (ParlaklÄ±k): 100%"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekbar_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"
            android:layout_marginBottom="24dp" />

        <!-- === SAVE === -->
        <Button
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾  Save Settings" />

    </LinearLayout>
</ScrollView>
